#!/bin/bash

set -euo pipefail

install_dir=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
wine_dir="${install_dir}/.wine"

cd "${install_dir}/Game"
executable_name="${1:-MapleLegends.exe}"

if command -v wine32 >/dev/null; then
    wine_exec="wine32"
    wine_arch="win32"
else
    wine_exec="wine"
    wine_arch=""
fi

WINEPREFIX="$wine_dir" WINEARCH=$wine_arch $wine_exec "$executable_name"
